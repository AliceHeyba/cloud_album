
<h2 class="text-center">Attended Events</h2>
  <div class="index-container text-center">
    <div class="row">
        <div class="event-index-container">
          <% @events.each do |event| %>
            <%= link_to event_path(event), class: "text-decoration-none text-white" do %>
              <div class="card event-card text-white">
                <% if event.banner.present? %>
                  <%= cl_image_tag event.banner.key, width: 400, crop: :fill, class: "card-img-top" %>
                <% else %>
                # put default image
                <%end%>

              </div>
            <% end %>
          <% end %>
        </div>
        <% if policy(Event).new? %>
          <div class="home-CTA-buttons d-grid gap-2">
            <%= link_to "New Event", new_event_path, class: "btn btn-primary" %>
          </div>
        <% end %>
    </div>
  </div>
