
<h2 class="text-center">Attended Events</h2>
  <div class="index-container text-center">
    <div class="row">
        <div class="events-index-container">
          <% @events.each do |event| %>
            <%= link_to event_path(event), class: "text-decoration-none text-white" do %>
              <div class="card event-card text-white">
                <% event.attachments.each do |attachment| %>
                  <% if attachment.posts.attached?%>
                    <%= cl_image_tag attachment.posts[0].key, width: 400, height: 300, crop: :fill %>
                    <%end %>
                <%end %>
                <%# <%= cl_image_tag event.photo.key, crop: :fill, class: "pitch_unique card-img-top" %>
                <%= event.event_name %> <div class="pb-2"></div>
              </div>
            <% end %>
          <% end %>
        </div>
        <% if policy(Event).new? %>
          <div class="home-CTA-buttons d-grid gap-2">
            <%= link_to "New Event", new_event_path, class: "btn btn-primary" %>
          </div>
        <% end %>
    </div>
  </div>

