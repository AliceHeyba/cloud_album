<% if policy(@comment).destroy? %>
  <%= link_to "Delete this comment", comment_path(@comment) , data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
<% end %>
<%= @attachment.likes.size %> Likes

<% like = current_user.likes.find_by(attachment: @attachment) %>
<% if like.nil? %>
  <%= link_to  attachment_likes_path(@attachment), data: {turbo_method: :post} do %>
    <i class="fa-regular fa-thumbs-up"></i>
  <% end %>
<% else %>
  <%= link_to like_path(like), data: {turbo_method: :delete} do %>
    <i class="fa-solid fa-thumbs-up"></i>
  <% end %>
<% end  %>
<% if policy(@attachment).destroy? %>
  <%= link_to attachment_path(@attachment), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
    <i class="fa-sharp fa-solid fa-trash"></i>
  <% end %>
<% end %>
