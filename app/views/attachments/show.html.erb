  <i class="fa-regular fa-comment-dots"data-bs-toggle="modal" data-bs-target="#exampleModal"></i>

  <!-- The form -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">Add your comment</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <%= simple_form_for [ @attachment, @comment ] do |f| %>
            <%= f.input :content %>
            <%= f.submit class:"btn btn-success text-white mt-3" %>
