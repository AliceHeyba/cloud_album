
<div class="container bg-white justify-content-center pt-3 pb-3">
  <div class="row">
    <div class="col">
        <%= simple_form_for [@event, @attachment] do |f| %>
           <%= f.input :posts, as: :file, input_html: { multiple: true, resource_type: :auto } %>
          <div class="text-center">
          <%# <% raise %>
            <%= f.submit class:"btn btn-success btn-booking-event text-white mt-3" %>
          </div>
      <% end %>
    </div>
  </div>
</div>


<%= link_to "Back to event homepage", event_path(@event), class: "btn btn-edit" %>
